/* game.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.game-header {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: white;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.game-status {
  flex: 1;
}

.status-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  display: block;
  margin-bottom: 10rpx;
}

.current-player {
  font-size: 26rpx;
  color: #7f8c8d;
}

.game-controls {
  display: flex;
  gap: 10rpx;
}

.control-btn {
  background-color: #3498db;
  color: white;
  border: none;
  border-radius: 6rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
}

.control-btn:disabled {
  background-color: #bdc3c7;
}

.refresh-btn {
  background-color: #e67e22 !important;
}

.game-board {
  background-color: #deb887;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.2);
  margin-bottom: 20rpx;
}

.board-canvas {
  border: 2rpx solid #8b4513;
  border-radius: 5rpx;
  background-color: #deb887;
}

.game-settings {
  width: 100%;
  background-color: white;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #2c3e50;
}

.picker {
  padding: 10rpx 20rpx;
  background-color: #ecf0f1;
  border-radius: 5rpx;
  color: #2c3e50;
}

.hint-display {
  width: 100%;
  background-color: #f39c12;
  color: white;
  padding: 20rpx;
  border-radius: 10rpx;
  text-align: center;
  font-size: 26rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.hint-display button {
  background-color: rgba(255, 255, 255, 0.3);
  color: white;
  border: 1rpx solid white;
  font-size: 22rpx;
}

/* 响应式设计 */
@media screen and (max-width: 375px) {
  .game-header {
    flex-direction: column;
    gap: 15rpx;
  }
  
  .game-controls {
    width: 100%;
    justify-content: center;
  }
}

/* 棋子动画效果 */
@keyframes piece-drop {
  0% {
    transform: scale(0);
    opacity: 0;
  }
  50% {
    transform: scale(1.2);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.piece-animation {
  animation: piece-drop 0.3s ease-out;
}

/* 自定义弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-dialog {
  width: 600rpx;
  max-width: 80%;
  background-color: white;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
  overflow: hidden;
  animation: modal-show 0.3s ease-out;
}

@keyframes modal-show {
  0% {
    transform: scale(0.7);
    opacity: 0;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.modal-header {
  padding: 40rpx 40rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
}

.modal-close {
  font-size: 48rpx;
  color: #999;
  padding: 10rpx;
  line-height: 1;
  cursor: pointer;
}

.modal-body {
  padding: 40rpx;
  text-align: center;
}

.modal-text {
  font-size: 32rpx;
  color: #34495e;
  line-height: 1.6;
}

.modal-footer {
  padding: 20rpx 40rpx 40rpx;
  display: flex;
  gap: 20rpx;
}

.modal-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  border: none;
}

.modal-btn-cancel {
  background-color: #95a5a6;
  color: white;
}

.modal-btn-confirm {
  background-color: #3498db;
  color: white;
}

/* 避开棋盘的toast样式 */
.board-safe-toast {
  position: fixed;
  top: 200rpx !important;
  left: 50%;
  transform: translateX(-50%);
  z-index: 10000;
  background: rgba(0, 0, 0, 0.8);
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  max-width: 500rpx;
  text-align: center;
}

/* 避开棋盘的modal样式 */
.board-safe-modal {
  position: fixed;
  top: 150rpx !important;
  left: 50%;
  transform: translateX(-50%);
  width: 600rpx;
  max-width: 90%;
  z-index: 10001;
  background: white;
  border-radius: 15rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
}

/* AI落子提示特殊样式 */
.ai-move-highlight {
  position: fixed;
  top: 180rpx;
  left: 50%;
  transform: translateX(-50%);
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 25rpx 50rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.4);
  z-index: 10002;
  animation: pulse 0.6s ease-in-out;
}

@keyframes pulse {
  0% { transform: translateX(-50%) scale(0.8); opacity: 0; }
  50% { transform: translateX(-50%) scale(1.05); opacity: 1; }
  100% { transform: translateX(-50%) scale(1); opacity: 1; }
}